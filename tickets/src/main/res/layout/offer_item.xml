<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:paddingEnd="@dimen/_68dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/ic_icon_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ic_image_offer"
            android:layout_width="@dimen/_132dp"
            android:layout_height="@dimen/_132dp"
            android:background="@color/black"
            tools:src="@drawable/image1" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/offer_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:textColor="@color/white"
        android:textFontWeight="600"
        android:textSize="@dimen/_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_icon_offer"
        tools:text="Die Antwoord" />

    <TextView
        android:id="@+id/offer_item_town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="@dimen/_14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/offer_item_title"
        tools:text="Будапешт" />

    <ImageView
        android:id="@+id/ic_plane"
        android:layout_width="@dimen/_24dp"
        android:layout_height="@dimen/_24dp"
        android:layout_marginTop="@dimen/_4dp"
        android:background="@drawable/ic_plane_up"
        android:backgroundTint="@color/grey6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/offer_item_town" />

    <TextView
        android:id="@+id/offer_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="@dimen/_14sp"
        app:layout_constraintBottom_toBottomOf="@id/ic_plane"
        app:layout_constraintStart_toEndOf="@id/ic_plane"
        app:layout_constraintTop_toTopOf="@id/ic_plane"
        tools:text="от 22 264 ₽" />

</androidx.constraintlayout.widget.ConstraintLayout>